# News Bot Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=news-bot
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL connection string
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://newsbot:password@localhost:5432/newsbot

# Connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# =============================================================================
# JWT Authentication
# =============================================================================
# Generate a secure secret key with: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_HOURS=24

# =============================================================================
# External APIs
# =============================================================================
# NewsAPI - Get your key at https://newsapi.org/
NEWSAPI_KEY=your-newsapi-key-here

# OpenAI - Get your key at https://platform.openai.com/
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
AUTH_RATE_LIMIT_PER_MINUTE=5

# =============================================================================
# CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# Scheduler Configuration
# =============================================================================
SCHEDULER_ENABLED=true
DIGEST_GENERATION_INTERVAL_MINUTES=15

# =============================================================================
# Logging
# =============================================================================
LOG_FILE_PATH=logs/app.log
LOG_FILE_MAX_BYTES=10485760
LOG_FILE_BACKUP_COUNT=5
